<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">
<Properties>
    <Property name="basePath">C:\Misha1\ru.javarush.kuznetsov.quest\src\logs</Property>
</Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <ThresholdFilter level="info" /> <!-- для консольного вывода установлен уровень error с помощью элемента ThresholdFilter, -->
        </Console>

        <RollingFile name="rollingFile" fileName="${basePath}/quest.log"
                     filePattern="${basePath}/quest.%d{yyyy-MM-dd}.log"
                     ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %C{1} %M: %m%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="all" />
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="all">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="rollingFile"/>
        </Root>
    </Loggers>
</Configuration>